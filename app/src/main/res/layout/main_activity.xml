<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="ipa"
            type="com.irpagnossin.ipa.Ipa" />
    </data>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10pt"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10pt"
                    android:text="IPA:"
                    android:textSize="10pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{ipa.ipa}"
                    android:textSize="20pt"
                    android:textStyle="bold" />
            </LinearLayout>

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/GridLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5pt"
                android:columnCount="4"
                android:rowCount="4"
                tools:context=".GridXMLActivity">


                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interativa" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temporal" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Espacial" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5pt"
                    android:text="Professor" />

                <Switch
                    android:id="@+id/switch00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="5pt"
                    android:text=""
                    tools:checked="false" />

                <Switch
                    android:id="@+id/switch01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5pt"
                    android:checked="false"
                    android:text=""
                    tools:checked="false" />

                <Switch
                    android:id="@+id/switch02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:padding="5pt"
                    android:checked="false"
                    android:text=""
                    tools:checked="false" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:padding="5pt"
                    android:gravity="right"
                    android:text="Aluno" />

                <Switch
                    android:id="@+id/switch10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:padding="5pt"
                    android:checked="false"
                    android:text=""
                    tools:checked="false" />

                <Switch
                    android:id="@+id/switch11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:padding="5pt"
                    android:checked="false"
                    android:text=""
                    tools:checked="false" />

                <Switch
                    android:id="@+id/switch12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:padding="5pt"
                    android:checked="false"
                    android:text=""
                    tools:checked="false" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:padding="5pt"
                    android:text="Material" />

                <Switch
                    android:id="@+id/switch20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="40dp"
                    android:padding="5pt"
                    android:checked="false"
                    android:text=""
                    tools:checked="false" />

                <Switch
                    android:id="@+id/switch21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="40dp"
                    android:padding="5pt"
                    android:checked="false"
                    android:text=""
                    tools:checked="false" />

                <Switch
                    android:id="@+id/switch22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="40dp"
                    android:padding="5pt"
                    android:checked="false"
                    android:text=""
                    tools:checked="false" />
            </GridLayout>
        </LinearLayout>
</layout>